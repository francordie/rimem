<h1>Tag list</h1>

<ul>
	<% ActsAsTaggableOn::Tag.all.each do |tag| %>
		<li><%= link_to tag.name, tag_path(tag.name) %> (<%= tag.taggings_count %>)</li>
	<% end %>
</ul>

<h2>Tag Cloud</h2>

<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag.name), :class => css_class %>
<% end %>