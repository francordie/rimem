<div class="row">
  <div class="col s6 offset-s3 centered">
    <h1><%= @link.title %></h1>

    <p>
      <strong>Description:</strong>
      <%= @link.description %>
    </p>

    <p>
      <%= link_to @link.url, @link.url %>
    </p>

    <p>
      <strong>Public:</strong>
      <%= @link.public %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @link.user.email %>
    </p>

    <p>
      <strong>Tags:</strong>
      <% @link.tag_list.each do |tag| %>
        <%= link_to tag, tag_path(tag) %>
      <% end %>
    </p>

    <%= link_to 'Edit', edit_link_path(@link) %> |
    <%= link_to 'Back', links_path %>
  </div>
</div>