<div class="row">
  <div class="col s8 offset-s2">
    <h3><%= @link.title %></h3>

    <p>
      <%= link_to @link.url, @link.url %> (<b><%= @link.public ? 'PUBLIC' : 'PRIVATE' %></b>)
    </p>

    <p><b>Description:</b></p>
    <p><%= @link.description %></p>

    <p><b>User:</b></p>
    <p><%= current_user_is_admin? ? @link.user.email : '-' %></p>

    <p>
      <% @link.tag_list.each do |tag| %>
        <%= link_to tag, tag_path(tag), class: 'btn btn-small' %>
      <% end %>
    </p>

    <div class="right">
      <%= link_to 'Edit', edit_link_path(@link) %> |
      <%= link_to 'Back', links_path %>
    </div>
  </div>
</div>